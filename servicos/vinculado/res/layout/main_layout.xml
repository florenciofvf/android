<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="florencio.com.br.servicevinculado.MainActivity">

    <Button
        android:onClick="iniciarServicoVinculado"
        android:text="Iniciar Serviço Vinculado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="pararServicoVinculado"
        android:text="Parar Serviço Vinculado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="mostrarValorContador"
        android:text="Mostrar Valor do Contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="iniciarServico"
        android:text="Iniciar Serviço"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="pararServico"
        android:text="Parar Serviço"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
