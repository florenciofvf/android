<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item android:left="18dp" android:right="5dp">
                <shape android:shape="rectangle">
                    <stroke android:width="7px" android:color="@color/azul" />
                    <size android:width="24dp" android:height="24dp" />
                    <corners android:radius="@dimen/raio" />
                </shape>
            </item>
            <item android:left="20dp">
                <rotate android:fromDegrees="41" android:toDegrees="41" android:pivotX="20%" android:pivotY="10%">
                    <shape android:shape="line">
                        <stroke android:width="7dp" android:color="#009900" />
                        <size android:width="24dp" android:height="24dp" />
                    </shape>
                </rotate>
            </item>
            <item android:left="19dp">
                <rotate android:fromDegrees="135" android:toDegrees="135" android:pivotX="63%" android:pivotY="50%">
                    <shape android:shape="line">
                        <stroke android:width="7dp" android:color="#009900" />
                        <size android:width="24dp" android:height="24dp" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item android:left="18dp" android:right="5dp">
                <shape android:shape="rectangle">
                    <stroke android:width="7px" android:color="@color/azul" />
                    <size android:width="24dp" android:height="24dp" />
                    <corners android:radius="@dimen/raio" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>